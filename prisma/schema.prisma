// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  username       String    @unique
  email          String    @unique
  password       String
  created_At     DateTime  @default(now())
  subscried_At   DateTime?
  watched_videos Video[]
  Xp             Float?
}

model Video {
  id           Int     @id @default(autoincrement())
  title        String
  url          String
  mins         Int
  secs         Int
  section_ID   section @relation(fields: [sectionId], references: [id])
  sectionId    String
  User_watched User[]
}

model course {
  id      String    @id @default(uuid())
  name    String
  section section[]
}

model section {
  id        String  @id @default(uuid())
  name      String
  course_ID course  @relation(fields: [courseId], references: [id])
  courseId  String
  Video     Video[]
}
